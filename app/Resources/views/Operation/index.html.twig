{% extends 'gestion.html.twig' %}

{% block page_title %}{{ 'operation.page.index.title'|trans }}{% endblock %}


{% block content %}
    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'operation.label.date'|trans }}</th>
                <th>{{ 'operation.label.libelle'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td>{% if operation.date %}{{ operation.date|date('d/m/Y') }}{% endif %}</td>
                <td><a href="{{ path('operations_show', { 'id': operation.id }) }}">{{ operation.libelle }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
