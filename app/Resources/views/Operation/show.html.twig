{% extends 'base.html.twig' %}

{% block page_title -%}Détail d'une entité Operation{% endblock %}
{% block content -%}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('operations') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('operations_edit', { 'id': entity.id }) }}">
            Modifier l'entité
        </a>
    </li>
    <li>
		{{ form_start(delete_form) }}
		<input type="submit" value="Supprimer l'entité"/>
		{{ form_end(delete_form) }}
	</li>
</ul>
{% endblock %}
